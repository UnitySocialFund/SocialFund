@model SocialFund.Models.LogViewModels.AddCoinsViewModel

@{
    ViewBag.Title = "AddCoins";
    Layout = "~/Views/Shared/Site.cshtml";
}
    
    <div class="coinsdeal">
        @using (Html.BeginForm("AddCoins", "Log", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
        <table>
            <tr>
                <th>Choose user</th>
                <th>
                    <select id="UserName" required name="UserName" style="width: 200px;">
                        @foreach (var user in Model.Users)
                                {
                                    if (user.Name == User.Identity.Name)
                                    {
                                       <option value="@user.Name" selected>@user.Name</option>
                                    }
                                    else
                                    {
                                       <option value="@user.Name">@user.Name</option>
                                    }
                                }
                    </select>
                </th>
                <th>Input number of coins.</th>
                <th>
                    @Html.EditorFor(model => model.Log.Coins, new { required="required" })
                    @Html.ValidationMessageFor(model => model.Log.Coins)
                </th>
            </tr>
        </table>
        <table>
            <tr>
                <th>Enter comment</th>
                <th>
                    <style> textarea { resize: none;} </style>
                    @Html.TextAreaFor(model => model.Log.Comment, 10, 76, new { @required="required"})
                    @Html.ValidationMessageFor(model => model.Log.Comment)
                </th>
            </tr>
        </table>
        <p>
            <input type="submit" value="Add coins" class="g-button"/>
        </p>
        }
    </div>