@model SocialFund.Models.LogViewModels.RemoveCoinsViewModel

@{
    ViewBag.Title = "AddCoins";
    Layout = "~/Views/Shared/Site.cshtml";
}
    <div class="coinsdeal">
        @using (Html.BeginForm("RemoveCoins", "Log", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
        <table>
            <td>
                <th>Input number of coins.</th>
                <th>
                    @Html.EditorFor(model => model.Log.Coins, new { required="required", id="coins"})
                    @Html.ValidationMessageFor(model => model.Log.Coins)
                </th>
            </td>
            <td>
                <th>Enter comment</th>
                <th>
                    @Html.EditorFor(model => model.Log.Comment, new { required="required" })
                    @Html.ValidationMessageFor(model => model.Log.Comment)
                </th>
            </td>
            <td>
                <th>Choose user</th>
                <th>
                    <select id="UserName" required name="UserName">
                         <option value="@Model.UserName" selected>@Model.UserName</option>
                    </select>
                </th>
            </td>
        </table>
        <p>
            <input type="submit" value="Take coins" class="g-button"/>
        </p>
        }
    </div>